{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <article class="top-article" style="height:240px;">
        <div class="top-background">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 hidden-xs hidden-sm col-md-offset-1"><span class="current_players_online">Currently&nbsp;<strong>{{ user_count }}</strong>&nbsp; Members</span>
                    </div>
                    <div class="col-md-3"><img class="img-responsive" src="assets/img/cavenetwork logo.png"
                                               style="margin:auto; display:inline-block;"></div>
                    <div class="col-md-3 hidden-xs hidden-sm"><span
                                class="current_players_online">Server: <strong>{{ server_link }}</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </article>
    <main class="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-9 col-xs-12">
                    <div class="cave-module" data-module-name="updates"></div>
                    <div class="alert alert-warning" role="alert"><span><strong>Our Games</strong></span></div>
                    <div class="col-xs-12 col-md-3">
                        <div class="panel panel-default game-container">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">Minecraft</h3>
                            </div>
                            <div class="panel-body"><span>Currently<strong>500</strong>player online<br><br></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <div class="panel panel-default game-container">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">CS:GO</h3>
                            </div>
                            <div class="panel-body"><span>Currently<strong>234</strong>Members<br><br></span></div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <div class="panel panel-default game-container">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">Fortnite</h3>
                            </div>
                            <div class="panel-body"><span>Currently<strong>124</strong>Members<br><br></span></div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-3">
                        <div class="panel panel-default game-container">
                            <div class="panel-heading">
                                <h3 class="panel-title text-center">PUBG</h3>
                            </div>
                            <div class="panel-body"><span>Currently<strong>60</strong>Members<br><br></span></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    {% if sellout is defined and sellout is not null %}
                        <div class="alert alert-warning" role="alert"><span><strong>SELLOUT HIER</strong></span></div>
                    {% endif %}
                    <div class="cave-module" data-module-name="leaderboard"></div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}